<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.azimi.cookhelper.EditRecipe"
    android:background ="@drawable/genericbg">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="EDIT:"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/menupurple"
            android:id="@+id/EditTitle"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout5">

        <TextView
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:text="Recipe Name :"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView9" />

        <EditText
            android:id="@+id/btn_recipename"
            android:inputType="text"
            android:hint="Enter the new name of your recipe"
            android:textSize="35px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_marginTop="66dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Edit Cuisine:"
            android:layout_width="10px"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:layout_weight="1" />

        <Spinner
            android:layout_width="5px"
            android:layout_height="wrap_content"
            android:id="@+id/spinnercuisine"
            android:layout_weight="1.60" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_marginTop="99dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <TextView
            android:text="Edit Category:"
            android:layout_width="10px"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:id="@+id/textView16"
            android:layout_weight="1.00" />

        <Spinner
            android:layout_width="5px"
            android:layout_height="wrap_content"
            android:id="@+id/spinnercategory"
            android:layout_weight="1.59" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="350px"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/linearLayout3"
        android:layout_alignBottom="@+id/linearLayout5">

        <TextView
            android:text="Insert Additional Ingredients:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:layout_alignTop="@+id/linearLayout11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView20" />

            <EditText
                android:id="@+id/btn_ingredientname"
                android:inputType="text"
                android:hint="Enter the name of your ingredient"
                android:textSize="35px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:text="Unit:"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView21" />

            <Spinner
                android:layout_width="5px"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerunit"
                android:layout_weight="1.60" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="710px"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="42dp"
            android:layout_marginEnd="42dp"
            android:layout_height="50dp">

            <TextView
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:text="Amount:"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView22" />

            <EditText
                android:id="@+id/btn_amountname"
                android:inputType="text|number"
                android:hint="Enter the amount"
                android:textSize="35px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:text="Add Ingredient"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:id="@+id/button4"
        android:textColor="@color/menupurple"
        android:visibility="visible"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="addIngredientBtnClicked" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout4">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Edit Instructions:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/textView2"
                android:layout_weight="1" />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/instructions" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backBtn"
            android:textColor="@color/menupurple"
            android:onClick="backBtnClick"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/menupurple"
            android:text="Confirm Edit"
            android:id="@+id/confirm"
            android:onClick="confirmBtnClick"
            android:layout_weight="1"
            />
    </LinearLayout>


</RelativeLayout>