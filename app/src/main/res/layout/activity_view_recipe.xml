                android:textColor="@color/menuyellow"
                android:id="@+id/ing10" />
            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/menuyellow"
                android:id="@+id/ing11" />
            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/menuyellow"
                android:id="@+id/ing12" />
            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/menuyellow"
                android:id="@+id/ing13" />
            <TextView
                android:text=""
