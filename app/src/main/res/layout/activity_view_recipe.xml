                android:textColor="@color/menuyellow"
                android:textSize="15dp"
                android:id="@+id/ing4" />
            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/menuyellow"
                android:textSize="15dp"
                android:id="@+id/ing5" />
            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/menuyellow"
                android:textSize="15dp"
                android:id="@+id/ing6" />
            <TextView
                android:text=""
