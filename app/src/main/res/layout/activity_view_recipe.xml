            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/ing20" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:text="Instructions:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textView29"
        android:layout_below="@+id/linearLayout6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="Category:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/cuisineType"
        android:layout_marginBottom="11dp" />
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mealType"
        android:textColor="@color/menured"
        android:textSize="18dp"
        android:layout_alignBottom="@+id/textView14"
        android:layout_toRightOf="@+id/textView14"
        android:layout_toEndOf="@+id/textView14" />
    <TextView
        android:text="Cuisine:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView19"
        android:textSize="20dp"
        android:layout_below="@+id/cuisineType"/>
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cuisineType"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/recipeName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView19"
        android:layout_toRightOf="@+id/textView19"
        android:layout_toEndOf="@+id/textView19"
        android:textColor="@color/menugreen"
        android:textSize="18dp"
        android:id="@+id/cuisine" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="440dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:text="BACK"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:layout_weight="0.71"
            android:textColor="@color/menupurple"
            android:onClick="backBtnClick" />
        <Button
            android:text="EDIT "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editBtn"
            android:textColor="@color/menupurple"
            android:layout_weight="0.71"
            android:onClick="editBtnClick" />
        <Button
            android:text="DELETE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button14"
            android:layout_weight="1"
            android:textColor="@color/menupurple"
            android:onClick="deleteBtnClick" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView29"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Insert Instructions here"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:textColor="@color/menublue"
                android:textSize="15dp"
                android:maxLines="50"
                android:lines="15"
                android:id="@+id/instructions" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/linearLayout6"
        android:layout_below="@+id/scrollView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </LinearLayout>
</RelativeLayout>
